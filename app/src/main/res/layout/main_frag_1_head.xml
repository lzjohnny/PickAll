<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_1"/>

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_2"/>
            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_3"/>

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_5"/>

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_6"/>

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_7"/>

            <include layout="@layout/main_frag_1_head_item"
                android:id="@+id/main_frag_1_head_item_8"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>