<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/navi_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_frag_1_navi_left_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="敬请期待"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_frag_1_navi_left_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采摘健康生活" />

            </LinearLayout>

            <ImageView
                android:id="@+id/main_frag_1_navi_left_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_find_replace_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/navi_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_frag_1_navi_right_text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="敬请期待"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_frag_1_navi_right_text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采摘健康生活" />

            </LinearLayout>

            <ImageView
                android:id="@+id/main_frag_1_navi_right_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_send_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>