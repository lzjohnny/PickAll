<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#54B7EE">

    <TextView
        android:id="@+id/course_item_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="50sp"
        android:textColor="#9CDEF5"
        android:text="1"/>
    <LinearLayout
        android:id="@+id/course_item_center_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/course_item_num">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/course_item_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:text="概率论与数理统计"/>
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/course_item_location"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:text="B楼302教室"/>
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/course_item_time"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#127BEE"
            android:text="10:25 - 12:00"/>

        <TextView
            android:id="@+id/course_item_teacher"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textColor="#FFFFFFFF"
            android:text="胡予濮"/>
    </LinearLayout>
</RelativeLayout>